{% extends "backoffice/base-bo.html.twig" %}
{% block title %}
Mes Annonces
{% endblock %}


{% block content %}

<div class="page-inner">
    <h4 class="page-title">Annonces avec les avis</h4>
    <div class="row justify-content-center">
        <div class="col-sm-6">
            {# {% if properties|length > 0 %} #}
            <div class="table-responsive">
                <table class="table table-sm table-hover table-light">
                    <thead>
                        <tr>
                            <th scope="col">Titre</th>
                            <th scope="col">Nombre d'avis</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for property in properties %}
                        {% if property.reviews|length > 0 %}
                        <tr>
                            <td>{{ property.title }}</td>
                            <td>{{ property.reviews|length }}</td>
                            <td><a href="{{ path('admin-property-reviews',{'id':property.id}) }}"
                                    class="btn btn-outline-info">Consulter</a></td>
                        </tr>
                        {% endif %}
                        {% endfor %}
                    </tbody>
                </table>
                <div class="navigation d-flex justify-content-center">
                    {{ knp_pagination_render(properties) }}
                </div>
            </div>
            {# {% else %}
            <div class="p-5 my-5">
                <h2 class="text-center">Pas de donn√©es</h2>
            </div>
            {% endif %} #}
        </div>
    </div>
</div>



{% endblock %}

