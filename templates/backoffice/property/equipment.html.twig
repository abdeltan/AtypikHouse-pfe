{% extends "backoffice/base-bo.html.twig" %}
{% block title %}
Mes Annonces
{% endblock %}


{% block content %}

<div class="page-inner">
    <h4 class="page-title">Annonce</h4>
    <div class="row justify-content-center">
        <div class="col-sm-12 col-md-8">
            <h2>Propriétés dynamiques</h2>
        </div>
        <div class="col-sm-12 col-md-8">
            <form class="row" action="{{ path('manage-dynamic-properties',{'id':property.id}) }}" method="post">
                {% if property.equipments | length > 0 %}
                {% for equipment in property.equipments %}
                <div class="col-6">
                    <div class="form-group">
                        <label for="{{ equipment.title }}">{{ equipment.title }}</label>
                        <input type="text" id="{{ equipment.title }}" name="{{ equipment.id }}"
                            {{ (equipment.required)? 'required':'' }} class="form-control form-control"
                            value="{{ equipment.value }}">
                    </div>
                </div>
                {% endfor %}
                {% endif %}
                <div class="col-6">
                    <button type="submit" class="btn btn-outline-success w-100">Enregister</button>
                </div>
                <div class="col-6">
                    <a href="{{ path('manage-adresse',{'id':property.id}) }}"
                        class="btn btn-outline-dark w-100">Continuer</a>
                </div>
            </form>
        </div>
    </div>
</div>



{% endblock %}

{% block javascripts %}

<script></script>

{% endblock %}