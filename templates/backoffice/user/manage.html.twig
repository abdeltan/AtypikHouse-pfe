{% extends "backoffice/base-bo.html.twig" %}
{% block title %}
Utilisateurs
{% endblock %}


{% block content %}
<div class="page-inner">
    <h4 class="page-title">Utilisateur</h4>
    <div class="row justify-content-center">
        <div class="col-sm-12 col-md-6 col-lg-6">
            {{ form_start(profileForm) }}
            <div class="row">
                <div class="col-6">
                    <div class="form-floating mb-3">
                        {{ form_label(profileForm.firstName) }}
                        {{ form_widget(profileForm.firstName) }}
                        {{ form_errors(profileForm.firstName) }}
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-floating mb-3">
                        {{ form_label(profileForm.lastName) }}
                        {{ form_widget(profileForm.lastName) }}
                        {{ form_errors(profileForm.lastName) }}
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-floating mb-3">
                        {{ form_label(profileForm.sex) }}
                        {{ form_widget(profileForm.sex) }}
                        {{ form_errors(profileForm.sex) }}
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-floating mb-3">
                        {{ form_label(profileForm.phone) }}
                        {{ form_widget(profileForm.phone) }}
                        {{ form_errors(profileForm.phone) }}
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-floating mb-3">
                        {{ form_label(profileForm.email) }}
                        {{ form_widget(profileForm.email) }}
                        {{ form_errors(profileForm.email) }}
                    </div>
                </div>
                <div class="col-6">
                    <div class="mb-3">
                        {{ form_label(profileForm.birthDate) }}
                        {{ form_widget(profileForm.birthDate) }}
                        {{ form_errors(profileForm.birthDate) }}
                    </div>
                </div>
                <div class="col-6">
                    <div class="mb-3">
                        {{ form_label(profileForm.roles) }}
                        {{ form_widget(profileForm.roles) }}
                        {{ form_errors(profileForm.roles) }}
                    </div>
                </div>
                <div class="col-6">
                    <div class="mb-3">
                        {{ form_label(profileForm.status) }}
                        {{ form_widget(profileForm.status) }}
                        {{ form_errors(profileForm.status) }}
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-6 align-content-center d-flex">
                    <a href="{{ path('admin_user') }}" class="btn btn-outline-dark w-100">Annuler</a>
                </div>
                <div class="col-6 align-content-center d-flex">
                    <button type="submit" class="btn btn-outline-success w-100">Modifier</button>
                </div>
            </div>
            {{ form_end(profileForm) }}
        </div>
    </div>
</div>
</div>
{% endblock %}