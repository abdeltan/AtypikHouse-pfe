{% extends 'base.html.twig' %}

{% block title %}
Register
{% endblock title %}

{% block body %}
<style>
    body{
        background-color: #FFFAF0;
    }
</style>


<div class="container py-5 h-100 !direction !spacing">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-xl-10">
            <div class="card" style="border-radius: 1rem;">
                <div class="row g-0">
                    
                    <div class="col-md-6 col-lg-5 d-none d-md-block">
                        <img src="{{asset('/images/mountains-in-engraving.webp')}} "
                         alt="login form" class="img-fluid " style="border-radius: 1rem 0 0 1rem;"  />
                         <img src="{{asset('/images/travel-man.webp')}} "
                         alt="travel man" class="img-fluid " style="border-radius: 1rem 0 0 1rem;"  />
                      </div>
                      
                      <div class="col-md-6 col-lg-7 d-flex align-items-center">
                        <div class="card-body p-4 p-lg-5 text-black">
            {# {% if error %}
            <div class="alert alert-danger" role="alert">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
            {% endif %} #}
            {{ form_start(registrationForm) }}
            <div class="row">
                <div class="d-flex align-items-center mb-3 pb-1">
            
                    <i class="fa-solid fa-tree fa-2x me-3"style="color:green ;"></i>
                   
                    <h1 class="h1 py-2 text-success">Inscription</h1>
                    
                  </div>
                  <h2 class="h2 py-3"> Commencer le premier pas dans la nature</h2>
                <div class="col-6">
                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.firstName) }}
                        {{ form_label(registrationForm.firstName) }}
                        {{ form_errors(registrationForm.firstName) }}
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.lastName) }}
                        {{ form_label(registrationForm.lastName) }}
                        {{ form_errors(registrationForm.lastName) }}
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.sex) }}
                        {{ form_label(registrationForm.sex) }}
                        {{ form_errors(registrationForm.sex) }}
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.phone) }}
                        {{ form_label(registrationForm.phone) }}
                        {{ form_errors(registrationForm.phone) }}
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.email) }}
                        {{ form_label(registrationForm.email) }}
                        {{ form_errors(registrationForm.email) }}
                    </div>
                </div>
                <div class="col-12">
                    <div class="mb-3">
                        {{ form_label(registrationForm.birthDate) }}
                        {{ form_widget(registrationForm.birthDate) }}
                        {{ form_errors(registrationForm.birthDate) }}
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-floating mb-3">
                        {{ form_row(registrationForm.password) }}
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-floating mb-3">
                        {{ form_row(registrationForm.agreeTerms) }}
                    </div>
                </div>
                <div class="col-4 align-content-center d-flex">
                    <button type="submit" class="btn btn-success btn-lg btn-block">Continuer</button>
                </div>
            </div>
            {{ form_end(registrationForm) }}
            <p class=" mt-3 text-secondary">Si vous avez un compte, <a href="{{ path('login') }}">J'ai un compte</a></p>
                </div>
        </div>
    </div>
 </div>
</div>
</div>
</div>
{% endblock %}