{% extends "backoffice/base-bo.html.twig" %}
{% block title %}
Mes Annonces
{% endblock %}


{% block content %}

<div class="page-inner">
    <h4 class="page-title">Annonce</h4>
    <div class="row justify-content-center">
        <div class="col-sm-12 col-lg-10 col-xl-10">
            {{ form_start(imageForm) }}
            {{ form_row(imageForm) }}
            <div class="d-flex align-content-center d-flex">
                <button type="submit" class="btn btn-outline-success w-100">Enregister</button>
                <a href="{{ path('manage-dynamic-properties',{'id':property.id}) }}"
                    class="btn btn-outline-dark w-100 ml-5">Continuer</a>
            </div>
            {{ form_end(imageForm) }}
        </div>
        <div class="col-6 mt-5">
            <table class="table table-sm table-hover table-light">
                <thead>
                    <tr>
                        <th scope="col">Image</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% if property.images|length > 0 %}
                    {% for image in property.images %}
                    <tr>
                        <td><img src="/images/gallery/{{ image.path }}" width="300" alt="{{ property.title }}"></td>
                        <td><a name="" id="" class="btn btn-danger" href="{{ path('remove-gallery',{'id':image.id}) }}"
                                role="button">Supprimer</a></td>
                    </tr>
                    {% endfor %}
                    {% else %}
                    <tr>
                        <td colspan="2" class="text-center">Aucune image</td>
                    </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
</div>



{% endblock %}

{% block javascripts %}

<script></script>

{% endblock %}