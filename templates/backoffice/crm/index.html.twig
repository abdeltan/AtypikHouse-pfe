{% extends "backoffice/base-bo.html.twig" %}
{% block title %}
Propriétés dynamiques
{% endblock %}


{% block content %}

<div class="page-inner">
    <h4 class="page-title">Propriétés dynamiques</h4>
    <div class="row justify-content-center">
        <div class="col-sm-12 col-md-6">
            <form action="{{ path('admin_crm') }}" method="post">
                <div class="form-group">
                    <div id="equipment">
                        <div class="form-group">
                            <label for="equipment_title" class="required">Titre</label>
                            <input type="text" id="equipment_title" name="title" required="required"
                                class="form-control form-control">
                        </div>
                        <div class="form-group">
                            <div class="form-check">
                                <label class="form-check-label" for="required">
                                    <span class="form-check-sign">Obligatoire</span>
                                </label>
                                <input type="checkbox" id="required" name="required" class="form-check-input" value="1">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="PropertyType" class="required">Type</label>
                            <select class="form-control" name="propertyType" id="PropertyType">
                                {% for type in types %}
                                <option value="{{ type.id }}">{{ type.title }}</option>
                                {% endfor %}
                            </select>
                        </div>

                    </div>
                </div>
                <div class="d-flex align-content-center d-flex">
                    <button type="submit" class="btn btn-outline-success w-100">Enregister</button>
                </div>
            </form>
        </div>
    </div>
</div>



{% endblock %}

{% block javascripts %}

<script></script>

{% endblock %}