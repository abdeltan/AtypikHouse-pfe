{% extends 'base.html.twig' %}

{% block title %}Mon Compte{% endblock %}

{% block body %}
<div class="container">
    <div class="row mt-5">
        
        <div class="row">
          <div class="card-header">
             <h1 class=" text-center bg-dark text-light py-3">Paramètres généraux du compte</h1>
          </div>
       </div>  

        <div class="row">
                <div class="card-header">
                   <h2 class="text-center py-1">Mon Profile</h2>
                </div>
            <div class="card py-5">
             <div class="row">
                <div class="col-6">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="prenom" value="{{user.firstName}}" readonly>
                        <label for="prenom">Prénom</label>
                      
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="nom" value="{{ user.lastName }}" readonly>
                        <label for="nom">Nom</label>
                    </div>
                </div>
             </div>
             <div class="row">
                
                <div class="col-6">
                    <div class="form-floating mb-3">
                        <select class="form-select" disabled>
                            <option value="{{ user.sex }}" selected>{{ user.sex }}</option>
                        </select>
                        <label>Sexe</label>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-floating mb-3">
                        <input type="tel"  id="tel" class="form-control" value="{{ user.phone }}" readonly>
                        <label for="tel">Tél</label>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    <div class="form-floating mb-3">
                        <input type="email" id="email" class="form-control" value="{{ user.email }}" readonly>
                        <label for="email">Email</label>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-floating mb-3 ">
                        <input type="date" class="form-control" id="dateNaissance" value="{{ user.birthDate|date("Y-m-d") }}" readonly>
                        <label for="dateNaissance" >Date naissance</label>
                    </div>
                </div>
            </div>
                <div class=" align-content-center d-flex">
                    <a class="btn btn-primary w-100 " href="{{ path('edit-account') }}">Modifier Mon Profile</a>
                </div>
            </div>
        </div>
       
            <div class="row">
                <div class="card-header">
                <h2 class="text-center py-1">Mon Adresse</h2>
            </div>
            <div class="card py-5">
                <div class="row">
                <div class="col-6">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="Nrue" value="{{ user.addresse.streetNumber ?? '' }}" readonly>
                        <label for="Nrue">N° rue</label>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="rue" value="{{ user.addresse.streetName ?? '' }}" readonly>
                        <label for="rue">Rue</label>
                    </div>
                </div>
              </div>

               <div class="row">
                <div class="col-4">
                    <div class="form-floating mb-3">
                        <input type="text" id="city" class="form-control" value="{{ user.addresse.city  ?? '' }}" readonly>
                        <label for="city">Ville</label>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-floating mb-3">
                        <input type="text" id="postal" class="form-control" value="{{ user.addresse.codeZip ?? ''}}" readonly>
                        <label for="postal">C.P</label>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-floating mb-3">
                        <select class="form-select" disabled>
                            <option value="{{ user.addresse.country ?? 'FR' }}" selected>{{ user.addresse.country ?? 'FR' }}</option>
                        </select>
                        <label>Pays</label>
                    </div>
                </div>
               </div>

                <div class="align-content-center d-flex">
                    <a href="{{ path('edit-address') }}" class="btn btn-primary w-100">Modifier Mon Adresse </a>
                </div>
            </div>
       </div>
    </div>
</div>
</div>
{% endblock %}