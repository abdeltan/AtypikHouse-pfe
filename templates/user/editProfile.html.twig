{% extends 'base.html.twig' %}

{% block title %}Mon Compte{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="card">
            {{ form_start(profileForm) }}
            
                <h1 class="h1 card-header text-center text-light bg-dark py-3">Mon Profile</h1>
                <div class="card-body py-3">

                    <div class="row">
                <div class="col-6">
                    <div class="form-floating mb-3">
                        {{ form_widget(profileForm.firstName) }}
                        {{ form_label(profileForm.firstName) }}
                        {{ form_errors(profileForm.firstName) }}
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-floating mb-3">
                        {{ form_widget(profileForm.lastName) }}
                        {{ form_label(profileForm.lastName) }}
                        {{ form_errors(profileForm.lastName) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <div class="form-floating mb-3">
                        {{ form_widget(profileForm.sex) }}
                        {{ form_label(profileForm.sex) }}
                        {{ form_errors(profileForm.sex) }}
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-floating mb-3">
                        {{ form_widget(profileForm.phone) }}
                        {{ form_label(profileForm.phone) }}
                        {{ form_errors(profileForm.phone) }}
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-floating mb-3">
                        {{ form_widget(profileForm.email) }}
                        {{ form_label(profileForm.email) }}
                        {{ form_errors(profileForm.email) }}
                    </div>
                </div>
            </div>
                <div class="col-6">
                    <div class="mb-3">
                        {{ form_label(profileForm.birthDate) }}
                        {{ form_widget(profileForm.birthDate) }}
                        {{ form_errors(profileForm.birthDate) }}
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-floating mb-3">
                        {{ form_row(profileForm.password) }}
                    </div>
                </div>
                <div class="col-12 align-content-center d-flex">
                    <a href="{{ path('my-account') }}" class="btn btn-danger w-100 me-3">Annuler</a>
                    <button type="submit" class="btn btn-success w-100">Modifier</button>
                </div>
            </div>
            {{ form_end(profileForm) }}
        </div>
    </div>
</div>
{% endblock %}